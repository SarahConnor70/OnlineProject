{% extends 'layout/layout.html' %}
{% block content %}
    <div class="row">
        <div class="col-md-offset-2 col-lg-8 col-md-12">
            <div class="card" style="text-align:center">
                <div class="card-header" data-background-color="purple">
                    <h4 class="title">Coordonnées</h4>
                    <p class="category">Retrouvez les informations de l'entreprise</p>
                </div>
                <form method="POST" id="online" action="/coordonnees">
                    <div class="card-content">
                        <div><img src="../assets/img/logo.png" alt="logo Onlineformapro" style="width:280px; max-width:100%" ></div>
                        <div id="nomOnline">{{nomOnline}}</div>
                        <div id="adresseOnline">{{adresseOnline}}</div>
                        <div id="telephoneOnline">{{telephoneOnline}}</div>
                    </div>
                    <div class="card-footer">
                        <button id="majcoord" type="submit" class="btn btn-primary">Mettre à jour</button>
                        <button id="majcoord2" type="submit" class="btn btn-primary" style="display:none;">Valider les changements</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
