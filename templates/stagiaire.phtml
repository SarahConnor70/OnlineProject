{% extends 'layout/layout.html' %}
{% block content %}

<style type="text/css">
    
.radio{
    margin-right: 15px;
}
.gras{
    font-weight: bold;
}

.qualite{
    padding-left: 1%;
    font-size: 13px;
    margin-bottom: 40%;
    padding-right: 40%;
    padding-top:3%;
}
.espace{
    font-size: 13px;
    margin-bottom: 0;
}
.total{
    margin-top: 16px;
}

.marges{
    padding-top: 40%;
    margin-bottom: 40%;
    padding-right: 40%;
}
.margin10{
    margin-bottom: 10%;
}
.margin40{
    margin-top: 40%;
}
.total1{
    margin-left: 89%;
    margin-top: 27%;
}

.place{
     margin-top: 31%;
     margin-bottom: 10%;
     padding-left: 1%;
}
.place1{
    padding-left: 1%;
    margin-top: 37%;
}
.place2{
    padding-left: 1%; 
    margin-bottom: 29%;
    margin-top: 14%;  
}


</style>

<div class="col-md-offset-2 col-lg-8 col-md-12">
    <div class="card">
        <div class="card-header" data-background-color="purple">
            <h4 class="title">Modifier stagiaire/stage</h4>
            <p class="category"></p>
        </div>
        <div class="card-content table-responsive">
            <table class="table table-hover">
                <div class="row">
                    <div class="col s12">
                        <form method="POST">
                            <p>
                                <input type="radio" name="accepter" value="accepte" id="accepte"/>
                                <label for="accepte" class="radio">Accepté</label>
                                <input type="radio" name="accepter" value="attente" id="attente"/>
                                <label for="attente" class="radio">En attente</label>
                                <input type="radio" name="accepter" value="refuse" id="refuse"/>
                                <label for="refuse" class="radio">Refusé</label>
                            </p>
                            <ul class="tabs">
                                <li class="tab col s4"><a id="atest1" href="#ongletStagiaire">Personnes</a></li>
                                <li class="tab col s4"><a id="atest2" href="#ongletTest">Résultats des tests</a></li>
                                <li class="tab col s4"><a id="atest3"  href="#ongletStage">Stages</a></li>
                            </ul>

                            <!-- Personnes -->
                            <div id="ongletStagiaire" class="col s12">
                                <form>
                                    <div class="row">
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="nomStagiaire">Nom:</label>
                                                <input type="text" id="nomStagiaire" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="prenomStagiaire">Prenom:</label>
                                                <input type="text" id="prenomStagiaire" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="telephoneStagiaire">Téléphone:</label>
                                                <input type="text" id="telephoneStagiaire" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="mailStagiaire">Mail:</label>
                                                <input type="mail" id="mailStagiaire" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="adresseStagiaire">Adresse:</label>
                                                <input type="text" id="adresseStagiaire" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="cpStagiaire">CP:</label>
                                                <input type="text" id="cpStagiaire" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-offset-2 col m3">
                                            <div class="form-group label-floating">
                                                <label for="villeStagiaire">Ville:</label>
                                                <input type="text" id="villeStagiaire" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <button type="submit" id="modifStagiaire" class="btn btn-primary">Ajouter/Modifier</button>
                                    </div>
                                </form>
                            </div>


                            <!-- Resultat des tests -->
                            <div id="ongletTest" class="col s12">
                                <div class="row">
                                    <div class="col offset-m3 col m3">
                                        <div class="form-group label-floating">
                                            <label for="prenomResultat">Prenom:</label>
                                            <input type="text" id="prenomResultat" name="prenomResultat" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomResultat">Nom:</label>
                                            <input type="text" name="nomResultat" id="nomResultat" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="date" >Date:</label>
                                            <input type="text" id="date" name="date" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="connuFormation" >A connu la formation par:</label>
                                            <input type="text" id="connuFormation" name="connuFormation" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="age" >Age:</label>
                                            <input type="text" id="age" name="age" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="prescription" >Prescription:</label>
                                            <input type="text" id="prescription" name="prescription" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="status" >Status:</label>
                                            <input type="text" id="status" name="status" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="prescripteur" >Prescripteur:</label>
                                            <input type="text" id="prescripteur" name="prescripteur" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="contreIndic" >Contre indications:</label>
                                            <input type="text" id="contreIndic" name="contreIndic" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m6">
                                        <textarea type="text" id="commentaire" name="commentaire" class="form-control" placeholder="Commentaire(s)"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="gras">Pré-requis</p>
                                            <label for="nivFormation" class="padding margin10 margin40">Niveau formation:</label>
                                            <label for="formation" class="place tailleEcriture">Formation dans le secteur:</label>
                                            <label for="experience" class="place">Expérience professionnelle:</label>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Résultats oui/non</p>
                                            <label for="resultatNiveau" ></label>
                                            <input type="text" id="resultatNiveau" name="resultatNiveau" class="form-control">
                                            <label for="resultatFormation" > </label>
                                            <input type="text" id="resultatFormation" name="resultatFormation" class="form-control">
                                            <label for="resultatExperience" > </label>
                                            <input type="text" id="resultatExperience" name="resultatExperience" class="form-control">
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Nb de points</p>
                                            <label for="pointNiveau" ></label>
                                            <input type="text" id="pointNiveau" name="pointNiveau" class="form-control">
                                            <label for="pointFormation" ></label>
                                            <input type="text" id="pointFormation" name="pointFormation" class="form-control">
                                            <label for="pointExperience" ></label>
                                            <input type="text" id="pointExperience" name="pointExperience" class="form-control">
                                        </div>
                                        <div class="col-md-6">
                                            <textarea type="text" id="commentaire1" name="commentaire1" class="form-control" placeholder="Commentaire(s)"></textarea>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group label-floating">
                                                <label>Le ou la stagiaire à-t-il(elle) les pré-requis nécessaire</label>
                                                <input type="text" id="prerequis" name="prerequis" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="gras">Qualités personnelles (5 pts)</p>
                                            <label for="travail" class="padding tailleEcriture marges">Travail d'équipe:</label>
                                            <label for="curiosite" class="qualite">Curiosité:</label>
                                            <label for="dynammisme" class="qualite">Dynamisme:</label>
                                            <label for="discours" class="qualite">Discours:</label>
                                            <label for="mobilite" style="padding-left: 1%;font-size: 13px;padding-top:7%;">Mobilité et disponibilité:</label>

                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Résultats (0 à 2)</p>
                                            <label for="resultatTravail" class="espace"></label>
                                            <input type="text" id="resultatTravail" name="resultatTravail" class="form-control">
                                            <label for="resultatCuriosite" class="espace"> </label>
                                            <input type="text" id="resultatCuriosite" name="resultatCuriosite" class="form-control">
                                            <label for="resultatDynamisme" class="espace"> </label>
                                            <input type="text" id="resultatDynamisme" name="resultatDynamisme" class="form-control">
                                            <label for="resultatDiscours" class="espace"></label>
                                            <input type="text" id="resultatDiscours" name="resultatDiscours" class="form-control">
                                            <label for="resultatMobilite" class="espace"></label>
                                            <input type="text" id="resultatMobilite" name="resultatMobilite" class="form-control">
                                            <label for="total" class="espace total1">Total</label>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Nb de points</p>
                                            <label for="pointTravail" ></label>
                                            <input type="text" id="pointTravail" name="pointTravail" class="form-control">
                                            <label for="pointCuriosite" ></label>
                                            <input type="text" id="pointCuriosite" name="pointCuriosite" class="form-control">
                                            <label for="pointDynamisme" ></label>
                                            <input type="text" id="pointDynamisme" name="pointDynamisme" class="form-control">
                                            <label for="pointDiscours" ></label>
                                            <input type="text" id="pointDiscours" name="pointDiscours" class="form-control">
                                            <label for="pointMobilite" ></label>
                                            <input type="text" id="pointMobilite" name="pointMobilite" class="form-control">
                                            <input type="text" id="total" name="total" class="form-control total">
                                        </div>
                                        <div class="col-md-6">
                                           <textarea type="text" id="commentaire2" name="commentaire2" class="form-control" placeholder="Commentaire(s)"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="gras">Projet professionnel (3pts)</p>
                                            <label for="metier" class="place1" style="margin-bottom: 29%;">Connaissance du métier:</label>

                                            <label for="entreprise" class="place2">Connaissance d'entreprise:</label>

                                            <label for="projet" class="place2">Projet professionnel:</label>

                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Résultats (0 à 2)</p>
                                            <label for="resultatMetier" class="espace"></label>
                                            <input type="text" id="resultatMetier" name="resultatMetier" class="form-control">
                                            <label for="resultatEntreprise" class="espace"> </label>
                                            <input type="text" id="resultatEntreprise" name="resultatEntreprise" class="form-control">
                                            <label for="resultatProjet" class="espace"> </label>
                                            <input type="text" id="resultatProjet" name="resultatProjet" class="form-control">
                                            <label for="total1" class="tailleEcriture total1">Total</label>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Nb de points</p>
                                            <label for="pointMetier"></label>
                                            <input type="text" id="pointMetier" name="pointMetier" class="form-control">

                                            <label for="pointEntreprise"></label>
                                            <input type="text" id="pointEntreprise" name="pointEntreprise" class="form-control">

                                            <label for="pointProjet"></label>
                                            <input type="text" id="pointProjet" name="pointProjet" class="form-control">

                                            <input type="text" id="total1" name="total1" class="form-control total">

                                        </div>
                                        <div class="col-md-6">
                                            <textarea type="text" id="commentaire3" name="commentaire3" class="form-control" placeholder="Commentaire(s)"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="gras">Tests techniques (10pts)</p>
                                            <label for="culture" style="padding-left: 1%;margin-bottom: 40%;margin-top: 37%;">Culture générale et technique:</label>

                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Résultats (0 à 10)</p>
                                            <label for="resultatCulture" class="margin"></label>
                                            <input type="text" id="resultatCulture" name="resultatCulture" class="form-control">

                                            <label for="total2" class="total1">Total</label>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Nb de points</p>
                                            <label for="pointCulture"></label>
                                            <input type="text" id="pointCulture" name="pointCulture" class="form-control">
                                            <input type="text" id="total2" name="total2" class="form-control total">

                                        </div>
                                        <div class="col-md-6">
                                            <textarea type="text" id="commentaire4" name="commentaire4" class="form-control" placeholder="Commentaire(s)"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="gras">Résultats des évaluations:</p>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Nombres de points total</p>
                                            <label for="NbPoints" style="margin-bottom: 0;"></label>
                                            <input type="text" id="NbPoints" name="NbPoints" class="form-control">
                                        </div>
                                        <div class="col-md-3">
                                            <p class="gras">Note /20</p>
                                            <label for="note" style="margin-bottom: 0;"></label>
                                            <input type="text" id="note" name="note" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <button type="submit" id="ajouterResultat" class="btn btn-primary">Ajouter/Modifier</button>
                                    <button type="submit" id="calculerResultat" class="btn btn-primary">Calculer les résultats</button>
                                </div>
                            </div>


                            <!-- Stages -->
                            <div id="ongletStage" class="col s12">
                                <div class="row">
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomEntreprise">Entreprise:</label>
                                            <input type="text" id="nomEntreprise" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="adresseEntreprise">Adresse:</label>
                                            <input type="text" id="adresseEntreprise" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="telephoneEntreprise">Téléphone:</label>
                                            <input type="text" id="telephoneEntreprise" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomTuteur">Code postal:</label>
                                            <input type="text" id="cpEntreprise" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomTuteur">Ville:</label>
                                            <input type="text" id="villeEntreprise" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomTuteur">Tuteur:</label>
                                            <input type="text" id="nomTuteur" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="mailEntreprise">Mail:</label>
                                            <input type="mail" id="mailEntreprise" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomTuteur">Nom stagiaire:</label>
                                            <input type="text" id="nmStagiaire" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="jourVisite">Jour de la visite:</label>
                                            <input type="text" id="jourVisite" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="heureVisite">Heure du rendez-vous:</label>
                                            <input type="text" id="heureVisite" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <button type="submit" id="ajouterStages" class="btn btn-primary">Ajouter/Modifier stage</button>
                                </div>
                            </div>

                            <div>
                                <div class="row" id="divRecherche" style="display:none">
                                    <div class="col-md-offset-3 col m3">
                                        <div class="form-group label-floating">
                                            <label for="prenomRecherche">Prenom:</label>
                                            <input type="text" id="prenomRecherche" name="prenomRecherche" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <label for="nomRecherche">Nom:</label>
                                            <input type="text" name="nomRecherche" id="nomRecherche" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <div class="form-group label-floating">
                                            <button type="submit" id="recherche" class="btn btn-primary">Recherche</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <button id="rechercheStagiaire" class="btn btn-primary">Chercher Stagiaire</button>
                            </div>
                        </form>
                    </div>
                </div>
            </table>
        </div>
    </div>
</div>

{% endblock %}