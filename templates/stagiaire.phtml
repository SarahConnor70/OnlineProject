{% extends 'layout/layout.html' %}
{% block content %}
<div class="col-md-offset-2 col-lg-8 col-md-12">
    <div class="card">
        <div class="card-header" data-background-color="purple">
            <h4 class="title">Liste des stagiaires de la formation en cours</h4>
        </div>
        <div class="card-content table-responsive">
            <table class="table table-hover">
                <div class="row">
                    <div class="col s12">
                        <form method="post">
                            <p>
                                <input type="radio" name="accepter" value="accepte" id="accepte"/>
                                <label for="accepte" style="margin-right:15px">Accepté</label>
                                <input type="radio" name="accepter" value="attente" id="attente"/>
                                <label for="attente" style="margin-right:15px">En attente</label>
                                <input type="radio" name="accepter" value="refuse" id="refuse"/>
                                <label for="refuse" style="margin-right:15px">Refusé</label>
                            </p>
                            <ul class="tabs">
                                <li class="tab col s3"><a href="#test1">Personnes</a></li>
                                <li class="tab col s3"><a href="#test2">Résultats des tests</a></li>
                                <li class="tab col s3"><a href="#test3">Stages</a></li>
                                <li class="tab col s3"><a href="#test4">Dates de visite des stages</a></li>
                            </ul>

                            <!-- Personnes -->
                            <div id="test1" class="col s12">
                                <div id="nom" name="nom" contenteditable="true">Nom</div>
                                <div id="prenom" name="prenom" contenteditable="true">Prenom</div>
                                <div id="telephoneStagiaire" name="telephoneStagiaire" contenteditable="true">Telephone</div>
                                <div id="mailStagiaire" name="mailStagiaire" contenteditable="true">Mail</div>
                                <div id="cp" name="cp" contenteditable="true">CP</div>
                                <div id="ville" name="ville" contenteditable="true">Ville</div>
                            </div>

                            <!-- Visites -->
                            <div id="test4" class="col s12">
                                <div id="jVisite" name="jVisite" contenteditable="true">Jour de visite</div>
                                <div id="hVisite" name="hVisite" contenteditable="true">Heure de visite</div>
                                <div id="tuteur" name="tuteur" contenteditable="true">Nom du tuteur</div>
                                <div id="tel" name="tel" contenteditable="true">Telephone</div>
                                <div id="mail" name="mail" contenteditable="true">Mail</div>
                            </div>

                            <!-- Stages -->
                            <div id="test3" class="col s12">

                                <input type="checkbox" checked="checked" />
                                <label>Yellow</label>
                                <input type="checkbox"  checked="checked" />
                                <label>Yellow</label>
                                <input type="checkbox"  checked="checked" />
                                <label >Yellow</label>


                            </div>

                            <!-- Resultat des tests -->
                            <div id="test2" class="col s12"></div>
                            <div style="text-align: center">
                                <button type="submit" class="btn btn-primary">Créer</button>
                            </div>
                        </form>                    

                    </div>
                </div>
            </table>
        </div>
    </div>
</div>

{% endblock %}
