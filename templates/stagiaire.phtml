{% extends 'layout/layout.html' %}
{% block content %}
<div class="col-md-offset-2 col-lg-8 col-md-12">
    <div class="card">
        <div class="card-header" data-background-color="purple">
            <h4 class="title">Liste des stagiaires de la formation en cours</h4>
        </div>
        <div class="card-content table-responsive">
            <table class="table table-hover">
                <div class="row">
                    <div class="col s12">
                        <form>
                            <p>
                                <input type="radio" name="accepter" value="accepte" id="accepte"/>
                                <label for="accepte" style="margin-right:15px">Accepté</label>
                                <input type="radio" name="accepter" value="attente" id="attente"/>
                                <label for="attente" style="margin-right:15px">En attente</label>
                                <input type="radio" name="accepter" value="refuse" id="refuse"/>
                                <label for="refuse" style="margin-right:15px">Refusé</label>
                            </p>
                            <ul class="tabs">
                                <li class="tab col s3"><a href="#test1">Personnes</a></li>
                                <li class="tab col s3"><a href="#test2">Résultats des tests</a></li>
                                <li class="tab col s3"><a href="#test3">Stages</a></li>
                                <li class="tab col s3"><a href="#test4">Dates de visite</a></li>
                            </ul>
                            <!-- Personnes -->
                            <div id="test1" class="col s12">
                                <div class="col-md-offset-2 col m3">
                                    <label for="nomStagiaire">Nom:</label>
                                    <input type="text" id="nomStagiaire" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="prenomStagiaire">Prenom:</label>
                                    <input type="text" id="prenomStagiaire" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="telephoneStagiaire">Téléphone:</label>
                                    <input type="text" id="telephoneStagiaire" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="mailStagiaire">Mail:</label>
                                    <input type="text" id="mailStagiaire" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="adresseStagiaire">Adresse:</label>
                                    <input type="text" id="adresseStagiaire" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="cpStagiaire">CP:</label>
                                    <input type="text" id="cpStagiaire" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="villeStagiaire">Ville:</label>
                                    <input type="text" id="villeStagiaire" class="form-control">
                                </div>
                            </div>

                            <!-- Resultat des tests -->
                            <div id="test2" class="col s12">
                                <div class="row">
                                    <div class="col-md-offset-2 col m3">
                                        <label for="nom">Nom:</label>
                                        <input type="text" id="nom" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="prenom">Prenom:</label>
                                        <input type="text" id="prenom" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="date">Date:</label>
                                        <input type="text" id="date" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="connuFormation">A connu la formation par:</label>
                                        <input type="text" id="connuFormation" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="age">Age:</label>
                                        <input type="text" id="age" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="prescription">Prescription:</label>
                                        <input type="text" id="prescription" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="status">Status:</label>
                                        <input type="text" id="status" class="form-control">
                                    </div>
                                          <div class="col-md-offset-2 col m3">
                                        <label for="prescripteur">Prescripteur:</label>
                                        <input type="text" id="prescripteur" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="contreIndic">Contre indications:</label>
                                        <input type="text" id="contreIndic" class="form-control">
                                    </div>
                                    <div class="col-md-offset-2 col m3">
                                        <label for="commentaire">Commentaire:</label>
                                        <input type="text" id="commentaire" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Pré-requis</p>
                                            <label for="nivFormation" style="margin-bottom: 0;">Niveau formation:</label>
                                            <input type="text" id="nivFormation" class="form-control">

                                            <label for="formation" style="margin-bottom: 0;">Formation dans le secteur:</label>
                                            <input type="text" id="formation" class="form-control">

                                            <label for="experience" style="margin-bottom: 0;">Expérience professionnelle:</label>
                                            <input type="text" id="experience" class="form-control">

                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Résultats oui/non</p>
                                            <label for="resultatNiveau"></label>
                                            <input type="text" id="resultatNiveau" class="form-control">
                                            <label for="resultatFormation"> </label>
                                            <input type="text" id="resultatFormation" class="form-control">
                                            <label for="resultatExperience"> </label>
                                            <input type="text" id="resultatExperience" class="form-control">   
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Nb de points</p>
                                            <label for="pointNiveau"></label>
                                            <input type="text" id="pointNiveau" class="form-control">
                                            <label for="pointFormation"></label>
                                            <input type="text" id="pointFormation" class="form-control">
                                            <label for="pointExperience"></label>
                                            <input type="text" id="pointExperience" class="form-control">   
                                        </div>
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Commentaires</p>
                                            <label for="commentaire1"></label>
                                            <input type="text" id="commentaire1" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <p style="font-weight: bold;">Le ou la stagiaire à-t-il(elle) les pé-requis nécessaire</p>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Qualités personnelles (5 pts)</p>
                                            <label for="travail" style="margin-bottom: 0;">Travail d'équipe:</label>
                                            <input type="text" id="travail" class="form-control">
                                            <label for="curiosite" style="margin-bottom: 0;">Curiosité:</label>
                                            <input type="text" id="curiosite" class="form-control">
                                            <label for="dynammisme" style="margin-bottom: 0;">Dynamisme:</label>
                                            <input type="text" id="dynammisme" class="form-control">
                                            <label for="discours" style="margin-bottom: 0;">Discours:</label>
                                            <input type="text" id="discours" class="form-control">
                                            <label for="mobilite" style="margin-bottom: 0;">Mobilité et disponibilité:</label>
                                            <input type="text" id="mobilite" class="form-control">
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Résultats (0 à 2)</p>
                                            <label for="resultatTravail" style="margin-bottom: 0;"></label>
                                            <input type="text" id="resultatTravail" class="form-control">
                                            <label for="resultatCuriosite" style="margin-bottom: 0;"> </label>
                                            <input type="text" id="resultatCuriosite" class="form-control">
                                            <label for="resultatDynamisme" style="margin-bottom: 0;"> </label>
                                            <input type="text" id="resultatDynamisme" class="form-control">
                                            <label for="resultatDiscours" style="margin-bottom: 0;"></label>
                                            <input type="text" id="resultatDiscours" class="form-control">
                                            <label for="resultatMobilite" style="margin-bottom: 0;"></label>
                                            <input type="text" id="resultatMobilite" class="form-control">
                                            <label for="total" style="margin-left: 155px; margin-bottom: 0;">Total</label>      
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Nb de points</p>
                                            <label for="pointTravail"></label>
                                            <input type="text" id="pointTravail" class="form-control">

                                            <label for="pointCuriosite"></label>
                                            <input type="text" id="pointCuriosite" class="form-control">

                                            <label for="pointDynamisme"></label>
                                            <input type="text" id="pointDynamisme" class="form-control">

                                            <label for="pointDiscours"></label>
                                            <input type="text" id="pointDiscours" class="form-control">

                                            <label for="pointMobilite"></label>
                                            <input type="text" id="pointMobilite" class="form-control">

                                            <input type="text" id="total" class="form-control"> 

                                        </div>
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Commentaires</p>
                                            <label for="commentaire2" style="margin-bottom: 0;"></label>
                                            <input type="text" id="commentaire2" class="form-control">
                                            <label for="commentaires2" style="margin-bottom: 0;"></label>
                                            <input type="text" id="commentaires2" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Projet professionnel (3pts)</p>
                                            <label for="metier" style="margin-bottom: 0;">Connaissance du métier:</label>
                                            <input type="text" id="metier" class="form-control">
                                            <label for="entreprise" style="margin-bottom: 0;">Connaissance d'entreprise:</label>
                                            <input type="text" id="entreprise" class="form-control">
                                            <label for="projet" style="margin-bottom: 0;">Projet professionnel:</label>
                                            <input type="text" id="projet" class="form-control">
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Résultats (0 à 2)</p>
                                            <label for="resultatMetier" style="margin-bottom: 0;"></label>
                                            <input type="text" id="resultatMetier" class="form-control">
                                            <label for="resultatEntreprise" style="margin-bottom: 0;"> </label>
                                            <input type="text" id="resultatEntreprise" class="form-control">
                                            <label for="resultatProjet" style="margin-bottom: 0;"> </label>
                                            <input type="text" id="resultatProjet" class="form-control">
                                            <label for="total1" style="margin-left: 155px;">Total</label>      
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Nb de points</p>
                                            <label for="pointMetier"></label>
                                            <input type="text" id="pointMetier" class="form-control">

                                            <label for="pointEntreprise"></label>
                                            <input type="text" id="pointEntreprise" class="form-control">

                                            <label for="pointProjet"></label>
                                            <input type="text" id="pointProjet" class="form-control">

                                            <input type="text" id="total1" class="form-control"> 

                                        </div>
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Commentaires</p>
                                            <label for="commentaire3" style="margin-bottom: 0;"></label>
                                            <input type="text" id="commentaire3" class="form-control">
                                            <label for="commentaires3" style="margin-bottom: 0;"></label>
                                            <input type="text" id="commentaires3" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Tests techniques (10pts)</p>
                                            <label for="culture" style="margin-bottom: 0;">Culture générale et technique:</label>
                                            <input type="text" id="culture" class="form-control">
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Résultats (0 à 10)</p>
                                            <label for="resultatCulture" style="margin-bottom: 0;"></label>
                                            <input type="text" id="resultatCulture" class="form-control">

                                            <label for="total2" style="margin-left: 155px;">Total</label>      
                                        </div>
                                         <div class="col-md-3">
                                            <p style="font-weight: bold;">Nb de points</p>
                                            <label for="pointCulture"></label>
                                            <input type="text" id="pointCulture" class="form-control">
                                            <input type="text" id="total2" class="form-control"> 

                                        </div>
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Commentaires</p>
                                            <label for="commentaire4" style="margin-bottom: 0;"></label>
                                            <input type="text" id="commentaire4" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Résultats des évaluations:</p>
                                        </div>
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Nombres de points total</p>
                                            <label for="NbPoints" style="margin-bottom: 0;"></label>
                                            <input type="text" id="NbPoints" class="form-control">
                                        </div>
                                        <div class="col-md-3">
                                            <p style="font-weight: bold;">Note /20</p>
                                             <label for="note" style="margin-bottom: 0;"></label>
                                            <input type="text" id="note" class="form-control">
                                        </div>
                                        </div>
                                    </div>
                                </div>
                             
                            

                            

                            <!-- Stages -->
                            <div id="test3" class="col s12">
                                 <div class="col-md-offset-2 col m3">
                                    <label for="nomEntreprise">Entreprise:</label>
                                    <input type="text" id="nomEntreprise" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="adresseEntreprise">Adresse:</label>
                                    <input type="text" id="adresseEntreprise" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="telephoneEntreprise">Téléphone:</label>
                                    <input type="text" id="telephoneEntreprise" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="nomTuteur">Tuteur:</label>
                                    <input type="text" id="nomTuteur" class="form-control">
                                </div>
                            </div>

                            <!-- Visites -->
                            <div id="test4" class="col s12">
                                <div class="col-md-offset-2 col m3">
                                    <label for="jourVisite">Jour de la visite:</label>
                                    <input type="text" id="jourVisite" class="form-control">
                                </div>
                                <div class="col-md-offset-2 col m3">
                                    <label for="heureVisite">Heure du rendez-vous:</label>
                                    <input type="text" id="heureVisite" class="form-control">
                                </div>
                            </div>

                            <div style="text-align: center">
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                                <button type="submit" class="btn btn-primary">Modifier</button>
                            </div>
                        </form>
                    </div>
                </div>
            </table>
        </div>
    </div>
</div>

{% endblock %}
